#!/bin/bash

TARGET=/var/chroot/hardy
USER=root

function usage {

NAME=`echo $1 | sed -e "s/\.\///g"`

	cat << EOF
 $NAME [target user]"
 Usage example: $NAME hardy /var/chroot/test-hardy"

OPTIONS:
  -h, --help    Show this message
  -v, --verbose Verbose [Not implemented]

EOF
}

if [ "$1" != "" ]; then
	TARGET=$1
fi;

if [ "$2" != "" ]; then
	USER=$2
fi;

if [ $UID != 0 ]; then
	echo "Superuser permissions required. Aborting."
	exit 1
fi;

echo "Loging in to $USER@$TARGET"

chroot $TARGET /bin/su - $USER
